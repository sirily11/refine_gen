{% extends "antd/function.jinja" %}
{% block import -%}
import {
  Show,
  Typography,
  ImageField,
  Breadcrumb,
} from "@pankod/refine-antd";
import { useShow, useOne } from "@pankod/refine-core";

const { Title, Text } = Typography;
{% endblock -%}

{% block selections %}
      {% for selection in selections -%}
                {{ selection }}
        {% endfor -%}
{% endblock %}

{% block setup %}
      const { queryResult } = useShow<any>();
      const { data, isLoading } = queryResult;
      const record = data?.data;
{% endblock %}

{% block fields %}
    return (
        //@ts-ignore
       <Show isLoading={isLoading} pageHeaderProps={{ '{{breadcrumb: <Breadcrumb />}}'}}>
           {% for field in fields %}
                {{field}}
           {% endfor %}
       </Show>
    );
{% endblock %}